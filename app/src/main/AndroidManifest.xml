<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.milkmanagementapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.MilkManagementApp"
        tools:targetApi="31">
        <activity
            android:name="com.example.milkmanagementapp.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.milkmanagementapp.customer.CustomerMainActivity"
            android:exported="false"
            android:label="@string/title_activity_customer_main" />
        <activity
            android:name="com.example.milkmanagementapp.login.SelectUserActivity"
            android:exported="false" />
        <activity
            android:name="com.example.milkmanagementapp.owner.OwnerMainActivity"
            android:exported="false"
            android:label="@string/title_activity_owner_main" />
        <activity
            android:name="com.example.milkmanagementapp.login.LoginSuccessesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.milkmanagementapp.login.VerifyOtpActivity"
            android:exported="false" />
        <activity
            android:name="com.example.milkmanagementapp.login.LoginActivity"
            android:exported="false">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>